@tailwind base;
@tailwind components;
@tailwind utilities;

/* ===== PREMIUM BACKGROUND SYSTEM ===== */
/* Apply to body for consistent site-wide background */
body {
  position: relative;
  background-color: #FAFBFC;
  background-image: 
    radial-gradient(at 20% 80%, rgba(37, 99, 235, 0.06) 0px, transparent 50%),
    radial-gradient(at 80% 20%, rgba(99, 102, 241, 0.04) 0px, transparent 50%),
    radial-gradient(at 40% 60%, rgba(30, 64, 175, 0.03) 0px, transparent 50%);
  background-attachment: fixed;
  min-height: 100vh;
}

/* Subtle noise texture overlay */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.02'/%3E%3C/svg%3E");
  pointer-events: none;
  mix-blend-mode: overlay;
  opacity: 0.5;
  z-index: 1;
}

/* Ensure all content is above background effects */
#__next,
main,
.main-content {
  position: relative;
  z-index: 2;
}

/* Hero section enhanced background */
.hero-section {
  position: relative;
  background: 
    radial-gradient(at 30% 70%, rgba(37, 99, 235, 0.12) 0px, transparent 40%),
    radial-gradient(at 70% 30%, rgba(99, 102, 241, 0.08) 0px, transparent 40%),
    linear-gradient(180deg, rgba(255, 255, 255, 0.9) 0%, transparent 100%);
}

/* Smooth transition from hero to next section */
.hero-section::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 200px;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(250, 251, 252, 0.3) 40%,
    rgba(250, 251, 252, 0.8) 70%,
    #FAFBFC 100%
  );
  pointer-events: none;
  z-index: 5;
}

/* All sections should be transparent to show body background */
.section-default {
  background: transparent;
  position: relative;
}

/* White sections for contrast */
.section-white {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24px;
  margin: 40px 0;
  padding: 60px 40px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
}

/* Light blue accent sections */
.section-accent {
  background: linear-gradient(135deg, rgba(239, 246, 255, 0.6) 0%, rgba(219, 234, 254, 0.4) 100%);
  backdrop-filter: blur(10px);
  border-radius: 24px;
  margin: 40px 0;
  padding: 60px 40px;
  border: 1px solid rgba(37, 99, 235, 0.1);
}

:root {
  --radius: 0.625rem;

  /* Premium gradient variations */
  --gradient-primary: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
  --gradient-hover: linear-gradient(135deg, #1E40AF 0%, #1E3A8A 100%);
  --gradient-subtle: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
  
  /* Blue-tinted shadows */
  --shadow-blue-sm: 0 2px 8px rgba(37, 99, 235, 0.1);
  --shadow-blue-md: 0 8px 24px rgba(37, 99, 235, 0.12);
  --shadow-blue-lg: 0 20px 48px rgba(37, 99, 235, 0.16);

  /* Base colors */
  --background: 0 0% 100% / 0;
  --foreground: 215 50% 23%;

  /* Card colors */
  --card: 0 0% 100%;
  --card-foreground: 215 50% 23%;

  /* Popover colors */
  --popover: 0 0% 100%;
  --popover-foreground: 215 50% 23%;

  /* Primary colors - Deep Blue */
  --primary: 215 50% 23%;
  --primary-foreground: 0 0% 100%;

  /* Secondary colors - Teal */
  --secondary: 173 85% 32%;
  --secondary-foreground: 0 0% 100%;

  /* Muted colors */
  --muted: 210 40% 96.1%;
  --muted-foreground: 215 20% 47%;

  /* Accent colors - Light Blue */
  --accent: 199 95% 59%;
  --accent-foreground: 202 80% 24%;

  /* Destructive colors */
  --destructive: 0 84% 60%;
  --destructive-foreground: 0 0% 100%;

  /* Border and input colors */
  --border: 214 32% 91%;
  --input: 214 32% 91%;
  --ring: 216 25% 65%;
}

.dark {
  /* Base colors */
  --background: 222 47% 11%;
  --foreground: 210 40% 98%;

  /* Card colors */
  --card: 217 33% 17%;
  --card-foreground: 210 40% 98%;

  /* Popover colors */
  --popover: 217 33% 17%;
  --popover-foreground: 210 40% 98%;

  /* Primary colors - Deep Blue (lighter in dark mode) */
  --primary: 217 91% 68%;
  --primary-foreground: 222 47% 11%;

  /* Secondary colors - Teal (lighter in dark mode) */
  --secondary: 173 70% 50%;
  --secondary-foreground: 222 47% 11%;

  /* Muted colors */
  --muted: 217 33% 17%;
  --muted-foreground: 215 20% 65%;

  /* Accent colors - Light Blue (adjusted for dark mode) */
  --accent: 199 89% 48%;
  --accent-foreground: 199 100% 97%;

  /* Destructive colors */
  --destructive: 0 91% 71%;
  --destructive-foreground: 0 86% 31%;

  /* Border and input colors */
  --border: 217 33% 17%;
  --input: 217 33% 17%;
  --ring: 215 20% 65%;
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply text-foreground;
    background-color: #FAFBFC !important; /* Light off-white for entire page */
  }
}

/* Veloxforce Centralized Design System */
@layer components {
  /* ===== COLOR SYSTEM ===== */
  /* Primary Brand Colors */
  .velox-primary {
    @apply text-blue-600;
  }

  .velox-primary-bg {
    @apply bg-blue-600;
  }

  .velox-primary-light {
    @apply text-blue-500;
  }

  .velox-primary-light-bg {
    @apply bg-blue-50;
  }

  /* State Colors */
  .velox-success {
    @apply text-green-600;
  }

  .velox-success-bg {
    @apply bg-green-50;
  }

  .velox-warning {
    @apply text-amber-600;
  }

  .velox-warning-bg {
    @apply bg-amber-50;
  }

  .velox-error {
    @apply text-red-600;
  }

  .velox-error-bg {
    @apply bg-red-50;
  }

  /* Neutral Colors */
  .velox-neutral {
    @apply text-gray-700;
  }

  .velox-neutral-light {
    @apply text-gray-600;
  }

  .velox-neutral-bg {
    @apply bg-gray-50;
  }

  /* ===== BUTTON SYSTEM ===== */
  .velox-btn-primary {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
    color: white;
    font-weight: 600;
    padding: 18px 36px;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(37, 99, 235, 0.25);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
  }

  .velox-btn-primary:hover {
    background: linear-gradient(135deg, #1E40AF 0%, #1E3A8A 100%);
    box-shadow: 0 12px 32px rgba(37, 99, 235, 0.35);
    transform: translateY(-2px);
  }

  /* Shimmer effect overlay */
  .velox-btn-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 20%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0.2) 80%,
      transparent 100%
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .velox-btn-primary:hover::before {
    transform: translateX(100%);
  }

  /* ===== CARD SYSTEM ===== */
  .challenge-card {
    background: #F8F9FA;
    border: 1px solid #E2E8F0;
    box-shadow: 
      inset 0 2px 4px rgba(0, 0, 0, 0.06),
      0 1px 2px rgba(0, 0, 0, 0.02);
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    padding: 32px;
    transition: all 0.3s ease;
  }

  .challenge-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 35px,
        rgba(0, 0, 0, 0.01) 35px,
        rgba(0, 0, 0, 0.01) 70px
      );
    pointer-events: none;
  }

  .challenge-card:hover {
    transform: translateY(-1px);
    box-shadow: 
      inset 0 2px 4px rgba(0, 0, 0, 0.06),
      0 4px 8px rgba(0, 0, 0, 0.06);
  }

  .solution-card {
    background: 
      linear-gradient(135deg, rgba(239, 246, 255, 0.98) 0%, rgba(219, 234, 254, 0.95) 100%);
    border: 1px solid rgba(37, 99, 235, 0.2);
    box-shadow: 
      0 24px 48px -12px rgba(37, 99, 235, 0.2),
      0 12px 24px -8px rgba(0, 0, 0, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
    transform: translateY(-4px) scale(1.02);
    position: relative;
    border-radius: 20px;
    padding: 36px 32px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .solution-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 20px;
    right: 20px;
    height: 3px;
    background: linear-gradient(90deg, #2563EB 0%, #1E40AF 100%);
    border-radius: 0 0 2px 2px;
  }

  .solution-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 
      0 32px 64px -16px rgba(37, 99, 235, 0.25),
      0 16px 32px -12px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
  }

  /* Consolidated gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ===== ICON SYSTEM ===== */
  .velox-icon-primary {
    @apply text-gray-700;
  }

  .velox-icon-accent {
    @apply text-blue-600;
  }

  .velox-icon-success {
    @apply text-green-600;
  }

  .velox-icon-warning {
    @apply text-amber-600;
  }

  .velox-icon-error {
    @apply text-red-600;
  }

  /* Icon Containers */
  .icon-container-glass {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(37, 99, 235, 0.1);
    transition: all 0.3s ease;
  }

  .icon-container-glass:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 16px rgba(37, 99, 235, 0.15);
  }

  .icon-container-gradient {
    width: 56px;
    height: 56px;
    border-radius: 14px;
    background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
    transition: all 0.3s ease;
  }

  .icon-container-gradient:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 24px rgba(37, 99, 235, 0.15);
  }

  /* ===== TRANSFORMATION ARROW ===== */
  .transformation-arrow {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 
      0 8px 24px rgba(37, 99, 235, 0.25),
      inset 0 2px 0 rgba(255, 255, 255, 0.2);
    position: relative;
    animation: pulse-glow 3s ease-in-out infinite;
    transition: all 0.3s ease;
  }

  .transformation-arrow:hover {
    transform: scale(1.05);
    box-shadow: 
      0 12px 32px rgba(37, 99, 235, 0.35),
      inset 0 2px 0 rgba(255, 255, 255, 0.2);
  }

  .transformation-arrow svg {
    color: white;
    animation: slide-right 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 
        0 8px 24px rgba(37, 99, 235, 0.25),
        inset 0 2px 0 rgba(255, 255, 255, 0.2),
        0 0 0 0 rgba(37, 99, 235, 0.4);
    }
    50% {
      box-shadow: 
        0 8px 24px rgba(37, 99, 235, 0.25),
        inset 0 2px 0 rgba(255, 255, 255, 0.2),
        0 0 0 20px rgba(37, 99, 235, 0);
    }
  }

  @keyframes slide-right {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(4px); }
  }

  .velox-icon-light {
    @apply text-gray-50;
  }

  /* Icon Sizes */
  .velox-icon-sm {
    @apply w-4 h-4;
  }

  .velox-icon-md {
    @apply w-6 h-6;
  }

  .velox-icon-lg {
    @apply w-8 h-8;
  }

  .velox-icon-xl {
    @apply w-12 h-12;
  }

  /* Icon Backgrounds */
  .velox-icon-bg-primary {
    @apply bg-blue-100 text-blue-600 rounded-full p-2;
  }

  .velox-icon-bg-success {
    @apply bg-green-100 text-green-600 rounded-full p-2;
  }

  .velox-icon-bg-warning {
    @apply bg-amber-100 text-amber-600 rounded-full p-2;
  }

  .velox-icon-bg-error {
    @apply bg-red-100 text-red-600 rounded-full p-2;
  }

  /* Interactive States */
  .velox-icon-interactive {
    @apply transition-all duration-200 ease-in-out hover:scale-110 hover:opacity-80 cursor-pointer;
  }

  .velox-icon-cta {
    @apply transition-colors duration-200 hover:text-blue-700;
  }

  /* Combined Classes */
  .velox-icon-primary-md {
    @apply w-6 h-6 text-gray-700;
  }

  .velox-icon-accent-md {
    @apply w-6 h-6 text-blue-600;
  }

  .velox-icon-primary-lg {
    @apply w-8 h-8 text-gray-700;
  }

  .velox-icon-accent-lg {
    @apply w-8 h-8 text-blue-600;
  }

  /* ===== STEP SYSTEM ===== */
  .velox-step-number {
    @apply w-8 h-8 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-semibold;
  }

  .velox-step-card {
    @apply bg-white rounded-xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300;
  }

  /* ===== TYPOGRAPHY SYSTEM ===== */
  .velox-heading-xl {
    @apply text-4xl font-bold text-gray-900 leading-tight;
  }

  .velox-heading-lg {
    @apply text-3xl font-bold text-gray-900 leading-tight;
  }

  .velox-heading-md {
    @apply text-2xl font-semibold text-gray-900 leading-snug;
  }

  .velox-heading-sm {
    @apply text-xl font-semibold text-gray-900 leading-snug;
  }

  .velox-text-lead {
    @apply text-lg text-gray-600 leading-relaxed;
  }

  .velox-text-body {
    @apply text-base text-gray-700 leading-relaxed;
  }

  .velox-text-small {
    @apply text-sm text-gray-600 leading-normal;
  }

  /* ===== ANIMATION SYSTEM ===== */
  .velox-hover-lift {
    @apply transition-transform duration-200 hover:-translate-y-1;
  }

  .velox-hover-scale {
    @apply transition-transform duration-200 hover:scale-105;
  }

  .velox-fade-in {
    @apply opacity-0 animate-in fade-in duration-700;
  }

  /* ===== TRANSFORMATION ARROW EFFECTS ===== */
  .velox-transformation-arrow {
    @apply bg-gradient-to-r from-blue-500 to-blue-600 rounded-full p-4 shadow-lg mx-auto relative;
    animation: velox-pulse-glow 3s ease-in-out infinite;
    transform: scale(1.1);
  }

  .velox-transformation-arrow:hover {
    animation: velox-pulse-glow 1.5s ease-in-out infinite, velox-arrow-bounce 0.6s ease-in-out;
    transform: scale(1.15);
  }

  /* ===== STANDARDIZED ICON CONTAINERS ===== */
  .velox-icon-container-traditional {
    @apply bg-gray-100 rounded-full p-2 flex items-center justify-center transition-all duration-300;
  }

  .velox-icon-container-advantage {
    @apply bg-gradient-to-br from-blue-600 to-blue-700 rounded-full p-2 flex items-center justify-center shadow-md hover:shadow-lg transition-all duration-300 relative;
  }

  .velox-icon-container-advantage::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(135deg, #3B82F6, #1D4ED8);
    border-radius: inherit;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .velox-icon-container-advantage:hover::before {
    opacity: 0.3;
  }

  .velox-icon-standard {
    @apply w-5 h-5;
  }

  .velox-transformation-arrow::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #3b82f6, #1d4ed8, #3b82f6);
    border-radius: inherit;
    z-index: -1;
    opacity: 0.3;
    animation: velox-rotate-glow 4s linear infinite;
  }

  @keyframes velox-pulse-glow {
    0%, 100% {
      box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.3), 0 4px 6px -2px rgba(59, 130, 246, 0.1);
    }
    50% {
      box-shadow: 0 20px 40px -5px rgba(59, 130, 246, 0.4), 0 8px 12px -2px rgba(59, 130, 246, 0.2);
    }
  }

  @keyframes velox-rotate-glow {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes velox-arrow-bounce {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(4px);
    }
  }

  /* ===== CLIENT TRANSFORMATIONS SECTION ===== */
  .velox-case-study-card {
    @apply bg-white rounded-xl border border-gray-200 shadow-md hover:shadow-xl transition-all duration-200 hover:-translate-y-1;
  }

  .velox-case-study-startup {
    @apply bg-gradient-to-br from-blue-50 via-indigo-50 to-white border-2 border-blue-200 shadow-lg relative overflow-hidden;
  }

  .velox-case-study-startup::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(99, 102, 241, 0.04) 50%, rgba(255, 255, 255, 0.02) 100%);
    border-radius: inherit;
    pointer-events: none;
  }

  .velox-case-study-established {
    @apply bg-gradient-to-br from-blue-50 via-blue-100 to-indigo-100 border-2 border-blue-300 shadow-lg relative overflow-hidden;
  }

  .velox-case-study-established::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(29, 78, 216, 0.06) 100%);
    border-radius: inherit;
    pointer-events: none;
  }

  .velox-case-study-revenue {
    @apply bg-gradient-to-br from-emerald-50 via-blue-50 to-teal-100 border-2 border-emerald-300 shadow-xl relative overflow-hidden;
  }

  .velox-case-study-revenue::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(59, 130, 246, 0.06) 50%, rgba(20, 184, 166, 0.04) 100%);
    border-radius: inherit;
    pointer-events: none;
  }

  .velox-metrics-card {
    @apply bg-gradient-to-br from-white to-blue-50 rounded-xl p-6 text-center shadow-md hover:shadow-lg border border-blue-100 hover:border-blue-200 transition-all duration-200 hover:-translate-y-1;
  }

  .velox-guarantee-section {
    @apply bg-white border-2 border-blue-200 rounded-xl p-10 text-center hover:border-blue-300 transition-all duration-300;
  }

  /* ===== DESIGN SYSTEM ADDITIONS ===== */
  /* Typography Classes from Design System */
  .velox-text-h1 {
    font-family: 'Inter', sans-serif;
    font-size: clamp(32px, 5vw, 48px);
    line-height: 1.2;
    color: #0A2A4F;
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  .velox-text-h2 {
    font-family: 'Inter', sans-serif;
    font-size: clamp(24px, 4vw, 36px);
    line-height: 1.3;
    color: #0A2A4F;
    font-weight: 600;
  }

  .velox-text-h3 {
    font-family: 'Inter', sans-serif;
    font-size: clamp(20px, 3vw, 28px);
    line-height: 1.4;
    color: #0A2A4F;
    font-weight: 600;
  }

  /* Icon System from Design System */
  .velox-icon-default {
    color: #374151; /* gray-700 */
    width: 20px;
    height: 20px;
  }

  .velox-icon-success {
    color: #2563EB; /* blue-600 */
    width: 20px;
    height: 20px;
  }

  /* Duplicate CTA buttons removed - keeping only ultra-premium */

  /* Hover Effects */
  .velox-hover-lift {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .velox-hover-lift:hover {
    transform: translateY(-4px);
  }

  .velox-hover-button {
    transition: all 0.2s ease-out;
  }

  .velox-hover-button:hover {
    transform: translateY(-2px);
  }

  /* Transformation Arrow Animation */
  .velox-transformation-arrow {
    background: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
    border-radius: 50%;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 24px rgba(37, 99, 235, 0.3);
    position: relative;
    transform: scale(1.1);
    animation: velox-pulse-glow 3s ease-in-out infinite;
  }

  .velox-transformation-arrow:hover {
    transform: scale(1.15);
    animation-play-state: paused;
    box-shadow: 0 12px 32px rgba(37, 99, 235, 0.5);
  }

  /* Solution Cards System */
  .velox-solution-card {
    background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
    border: 1px solid #E2E8F0;
